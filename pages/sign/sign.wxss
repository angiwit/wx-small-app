/*item的内容样式*/
@import '/dist/style/weui.wxss';

.body_container {
  background-color: white;
  display: flex;
  flex-flow: column nowrap;
  align-items: center; /*样式的高度方向不用关心，由margin、padding、内容等撑开就可以了*/
  width: 90%; /*如果这里不设置width，则元素的宽由元素内容撑开 */
  height: 80vh;
  overflow-y: scroll;
}
.tip_words{
  width:90%;
color:#999;
font-size:14px;
border-bottom:1px solid #f6f6f6;
line-height: 2.3;
}

.page__bd {
  display: flex;
  background-color: #f6f6f6;
  align-items: center;
  justify-content: space-around;
  height: 100vh;
}

.sigle_component_container {
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  margin-top: 5px;
  flex: 0.3;

  width: 90%;
  margin-left: 5%;
}
.sign_component_container{
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: center;
  flex: 0.6;
  border-bottom: 1px solid #f6f6f6;
  width: 90%;
  margin-left: 5%;
}

.image_component_container {
  display: flex;
  flex-flow: row wrap;
  flex: 0.8;
  width: 90%;
  margin-left: 5%;
}
.iamge_uploaded_container{
  display: flex;
  flex-flow: row wrap;
  width: 90%;
  margin-left: 5%;
  flex: 1;
  overflow-y: scroll;
  /* border: 1px solid #f6f6f6; */
}
.iamge_uploaded{
  width: 70px;
  height: 70px;
  margin: 5px;
  border: 1px solid #f6f6f6;
}
.uploader{
  width: 70px;
  height: 70px;
  margin: 5px;
}

.sign_icon {
  width: 100px;
  height: 100px;
  border-radius: 100%;
  background-color: #09bb07;
  font-size: 30px;
  color: white;
  text-align: center;
  line-height: 3;
}

.uploader_icon {
  width: 70px;
  height: 70px;
  background-repeat: no-repeat;
}

.item_content_main {
  flex: 0.8;
  /* padding-bottom:10px; */
  width: 90%;
  border-top: 1px solid #f6f6f6;
  /* margin-bottom:5px; */
  margin-left: 5%;
}

.placehodler_font {
  font-size: 14px;
  color: #999;
}

.border_cover{
  border-bottom: none;
}