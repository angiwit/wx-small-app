.page__bd {
  display: flex;
  background-color: #f6f6f6;
  align-items: center;
  justify-content: space-around;
  height: 100vh;
}

.body_container {
  background-color: white;
  display: flex;
  justify-content: center; /*如果在主轴方向设置了这个属性，则主轴方向的margin、padding等不起作用*/
  flex-flow: column wrap;
  align-items: center; /*样式的高度方向不用关心，由margin、padding、内容等撑开就可以了*/
  width: 90%; /*如果这里不设置width，则元素的宽由元素内容撑开 */
  height: 80vh;
}

.item_title {
  flex: 1;
  font-size: 14px;
  border-bottom: 1px solid #f6f6f6;
  width: 100%;
  text-align: left;
  line-height: 3;
  color: #999;
}

.item_content {
  flex: 1;
  padding-bottom: 10px;
  margin-left:10%;
  border-bottom:1px solid #f6f6f6;
  width: 90%;
  text-align: center;
  margin-top: 10px;
}

.iamge {
  flex: 5;
  width: 100%;
  text-align: center;
  height: 150px;
  /* margin-left: 10%; */
  padding: 1%;
}

.item_content_main {
  flex: 7;
  padding-bottom: 10px;
  color: #999;
  font-size: 14px;
  width: 90%;
  text-align: left;
  word-break: break-all;
  overflow-y: scroll;
  border-top: 1px solid #f6f6f6;
  margin-bottom: 5px;
  margin-left: 10%;
}

.my_weui-btn_container {
  flex: 1;
  width: 100%;
  margin-bottom: 5px;
}

.my_weui-btn {
  color: #fff;
  background-color: #1aad19;
  margin-left: 5%;
  margin-right: 5%;
  width: 90%;
}
