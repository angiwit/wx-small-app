.body_container {
  margin: 10% 5%;
  border: 3px solid #1aad19;
  background-color: white;
  display: flex;
  flex-direction: column; /*主轴方向是竖向，所以设置主轴方向的margin不起作用*/
  align-items: center; /*样式的高度方向不用关心，由margin、padding、内容等撑开就可以了*/
   width: 90%; /*如果这里不设置width，则元素的宽由元素内容撑开 */
}

.item_title {
  flex: 1;
  font-size: 30px;
  border-bottom: 2px solid #f6f6f6;
  width: 100%;
  text-align: center;
  line-height: 2;
}

.item_content {
  flex: 1;
  padding-bottom: 10px;
  border-bottom: 2px solid #f6f6f6;
  width: 100%;
  text-align: center;
  margin-top: 10px;
}

.iamge {
  flex: 1;
  border-bottom: 2px solid #f6f6f6;
  width: 100%;
  text-align: center;
  height: 150px;
}

.item_content_main {
  height: calc(100vh - 400px);
  padding-bottom: 10px;
  width: 100%;
  text-align: left;
  word-break: break-all;
  overflow-y:scroll;
  border: 2px solid #f6f6f6;
  margin-bottom: 5px;
}

